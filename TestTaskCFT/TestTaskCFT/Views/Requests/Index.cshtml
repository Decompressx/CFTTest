@using TestTaskCFT.Models
@model IEnumerable<Request>
@{
    Layout = "~/Views/Layout/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Заявки</h2>

<table id="tablepaging" class="table_blur">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequestName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionRequest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application.AppName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Application.AppName)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<div id="pageNavPosition" style="padding-top: 20px" align="center">
</div>
<script>
    var pager = new Pager('tablepaging', 10);
    pager.init();
    pager.showPageNav('pager', 'pageNavPosition');
    pager.showPage(1);
</script>
<p>
    @Html.ActionLink("Создать заявку", "Create")
</p>

